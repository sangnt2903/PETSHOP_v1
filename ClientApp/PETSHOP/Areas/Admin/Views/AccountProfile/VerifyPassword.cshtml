
@{
    ViewData["Title"] = "VerifyPassword";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section class="ftco-section bg-light ftco-faqs" style="padding: 3rem 0">
    <div class="container card-body table-responsive">
        <!-- 404 Error Text -->
        <div class="text-center">
            <p class="lead text-gray-800 mb-5">Đổi mật khẩu</p>
            <p>Vui lòng nhập mật khẩu hiện tại</p>
            <form asp-action="VerifyPassword" method="post">
                <div class="center" style="padding: 15px;">
                    <input type="password" class="form-control" name="password" style="max-width:400px; margin: auto;" placeholder="Mật khẩu hiện tại" required>
                    <p style="color:red">@ViewBag.result</p>
                    <button type="submit" style="margin-top: 10px" class="btn btn-primary mb-2">Xác thực </button>
                </div>
            </form>
        </div>
    </div>
    
</section>

