@model IEnumerable<PETSHOP.Models.Product>

@foreach (var product in Model)
{
    <div class="d-flex row align-items-center justify-content-between mb-3">
        <span>
            <img src="~/images/products/@product.ProductImage" style="border-radius:10px" width="60" height="60" alt="ảnh sản phẩm" />
            <label><b>@product.ProductName</b></label>
        </span>
        <button data-id="@product.ProductId" data-toggle="tooltip" title="Chọn" class="btn btn-outline-primary"><i class="fa fa-step-forward"></i></button>
    </div>
}