@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section breadcumb {
    <div class="card border-left-primary shadow h-100 py-2">
        <div class="card-body">
            <div class="row no-gutters align-items-center">
                <div class="col mr-2">
                    <div class="text-xl-center font-weight-bold text-primary text-uppercase mb-1">Nhập xuất hàng</div>
                </div>
            </div>
        </div>
    </div>
}

<div class="row m-md-1">
    <div class="card shadow mb-4 col-md-6">
        <div class="card-header py-3">
            <div class="d-flex row">
                <div class="justify-content-end">
                    <h6>Tra cứu dữ liệu nhập hàng</h6>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div>
                <input class="form-control" type="text" name="search" placeholder="Tìm kiếm sản phẩm" />
            </div>
            <hr />
            <span>Kết quả tìm kiếm:</span>
            <div class="card-body">
                <div class="d-flex row align-items-center justify-content-between">
                    <img src="~/images/about-1.jpg" width="60" alt="Alternate Text" />
                    <label>Thức ăn cho chó mèo</label>
                    <button class="btn btn-outline-primary"><i class="fa fa-step-forward"></i></button>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow mb-4 col-md-6">
        <div class="card-header py-3">
            <div class="d-flex row">
                <div class="justify-content-end">
                    <a asp-action="Create" asp-area="Admin" asp-controller="Products" class="btn btn-primary">Thêm hàng hóa</a>
                </div>
            </div>
        </div>
        <div class="card-body">

        </div>
    </div>
</div>


